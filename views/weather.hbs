<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  {{>navbar}}
  <section class="weather">
    <div class="searchInput">
      <input type="text" id="search" placeholder="enter city name">
      <input type="submit" value="search" id="btn">
    </div>

    <div class="cityLocation">
      <img width="30" src="/images/location.png" alt="">
      <p id="cityName">Banglore</p>
    </div>

    <div class="weatherInfo">
      <div class="card">
        <img height="100" src="/images/sun.png" alt="">
        <p>Temperature</p>
        <span id="temparature_value">0<span>0</span> <sup>o</sup>c</span>
      </div>

      <div class="card">
        <img height="100" src="/images/humidity.png" alt="">
        <p>Humidity</p>
        <span id="humidity_value">30</span><span>%</span>
      </div>
      <div class="card">
        <img height="100" src="/images/wind.png" alt="">
        <p>wind</p>
        <span id="wind_value">7</span><span>km/h</span>
      </div>
    </div>




    </div>
  </section>
  {{>footer}}
  <script src="/js/weather.js"></script>
</body>

</html>